# ==============================================
# CONSENTIRE ENVIRONMENT CONFIGURATION
# PRODUCTION MAINNET - Replit Deployment
# ==============================================

# Environment
NODE_ENV=production

# ==============================================
# BACKEND CONFIGURATION
# ==============================================
PORT=3001
BACKEND_HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL Database (Replit Managed)
# These are automatically set by Replit when you create a database
DATABASE_URL=postgresql://user:password@host:port/database
PGHOST=your-db-host
PGPORT=5432
PGUSER=your-db-user
PGPASSWORD=your-db-password
PGDATABASE=your-db-name

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:5000

# ==============================================
# CONSTELLATION NETWORK CONFIGURATION (MAINNET)
# ==============================================
# L0 Node - Metadata and cluster information
CONSTELLATION_NODE_URL=https://l0-lb-mainnet.constellationnetwork.io

# L1 Node - DAG transaction submission
CONSTELLATION_L1_URL=https://l1-lb-mainnet.constellationnetwork.io

# Network Configuration
CONSTELLATION_NETWORK_ID=1

# Wallet Credentials (Store in Replit Secrets - NEVER commit to git)
# Use Replit Secrets UI to set these:
# - CONSTELLATION_WALLET_ADDRESS
# - CONSTELLATION_PRIVATE_KEY
# - CONSTELLATION_PUBLIC_KEY

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# ==============================================
# LOGGING & MONITORING
# ==============================================
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# ==============================================
# PRODUCTION NOTES
# ==============================================
# 1. Constellation credentials MUST be stored in Replit Secrets
# 2. Database is automatically provisioned by Replit
# 3. All transactions submit to Constellation Mainnet (Network ID: 1)
# 4. No simulation mode - production-only configuration
# 5. ZK circuits use placeholder mode (compile circom for full ZK)
